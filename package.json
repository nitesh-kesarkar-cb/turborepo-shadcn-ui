{
  "name": "turborepo-shadcn-ui",
  "version": "1.6.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "build:admin": "pnpm --filter admin-app build",
    "build:client": "pnpm --filter client-app build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui": "pnpm --filter @repo/ui ui",
    "dev:admin-app": "pnpm --filter admin-app dev",
    "dev:client-app": "pnpm --filter client-app dev",
    "preview:client-app": "pnpm --filter client-app preview",
    "preview:admin-app": "pnpm --filter admin-app preview",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "catalog:",
    "turbo": "2.6.0"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=24"
  }
}
